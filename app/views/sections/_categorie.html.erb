<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Galerie Slider</title>
  <%= stylesheet_link_tag 'solidaire', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <h1 class="titre">Nos Categorie de produits:</h1>
  <table class="gallery">
    <tr>
      <td class="promotion">
        <div class="section">
          <%= image_tag "bain_de_bouche.jpg", class: "descr", alt: "Pain complet" %>
          <p>Hygiène et Beauté</p>
          <%# <p class="price">5000Ar</p> %>
        </div>
      </td>
      <%# <td class="separator"></td> %>
      <td class="promotion">
        <div class="section">
          <%= image_tag "chips.jpg", class: "descr", alt: "Pain complet", title: "CHIPS LEGERES(125G" %>
          <p>Fruits et légumes</p>
        </div>
      </td>
      <%# <td class="separator"></td> %>
      <td class="promotion">
        <div class="section">
          <%= image_tag "cereal.jpg",  class: "descr", alt: "Pain complet" %>
          <p>Viandes et poissons</p>
        </div>
      </td>
      <%# <td class="separator"></td> %>
      <td class="promotion">
        <div class="section">
          <%= image_tag "avocat.jpg",  class: "descr", alt: "Pain complet" %>
          <p>Boisson</p>
        </div>
      </td>
      <%# <td class="separator"></td> %>
      <td class="promotion">
        <div class="section">
            <%= image_tag "cat.jpg",  class: "descr", alt: "Pain complet" %>
            <p>Épicerie</p>
        </div>
        </td>
      </td>
    </tr>
    <tr class="plus">
      <td>
      </td>
      <td>
      </td>
      <td>
        <button class="promo-button">Voir plus</button>
      </td>
    </tr>
  </table>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
  const decreaseButtons = document.querySelectorAll(".decrease");
  const increaseButtons = document.querySelectorAll(".increase");
  const quantities = document.querySelectorAll(".quantity");
  const addToCartButtons = document.querySelectorAll(".add-to-cart");

  decreaseButtons.forEach((button, index) => {
    button.addEventListener("click", () => {
      let quantity = parseInt(quantities[index].value, 10);
      if (quantity > 0) {
        quantities[index].value = quantity - 1;
      }
    });
  });

  increaseButtons.forEach((button, index) => {
    button.addEventListener("click", () => {
      let quantity = parseInt(quantities[index].value, 10);
      quantities[index].value = quantity + 1;
    });
  });

  addToCartButtons.forEach((button) => {
    button.addEventListener("click", () => {
      button.classList.add("animate");
      setTimeout(() => {
        button.classList.remove("animate");
      }, 400);
    });
  });
});

  </script>

</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Galerie Slider</title>
  <%= stylesheet_link_tag 'categorie', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <h1 class="title">Nos Categorie de produits:</h1>
  <table class="categories">
    <tr>
      <td class="categorie">
        <%= link_to hygiene_path do %>
          <div class="liste">
            <%= image_tag "categorie/fruit.jpeg", alt: "Pain complet" %>
            <p>Hygiène et Beauté</p>
          </div>
        <% end %>
      </td>
      <td class="categorie">
        <%= link_to fruit_path do %>
          <div class="liste">
            <%= image_tag "categorie/fruit.jpeg", alt: "Pain complet", title: "CHIPS LEGERES(125G" %>
            <p>Fruits et légumes</p>
          </div>
        <% end %>
      </td>
      <td class="categorie">
        <%= link_to viande_path do %>
          <div class="liste">
            <%= image_tag "cereal.jpg",  alt: "Pain complet" %>
            <p>Viandes et poissons</p>
          </div>
        <% end %>
      </td>
      <td class="categorie">
        <%= link_to boisson_path do %>
          <div class="liste">
            <%= image_tag "categorie/width1338.jpg",  alt: "Pain complet" %>
            <p>Boisson</p>
          </div>
        <% end %>
      </td>
      <td class="categorie">
        <%= link_to epicerie_path do %>
          <div class="liste">
              <%= image_tag "categorie/epicerie.jpeg",  alt: "Pain complet" %>
              <p>Épicerie</p>
          </div>
        <% end %>
        </td>
      </td>
    </tr>
    <tr class="separators">
      <td>
      </td>
    </tr>
    <%# second column %>
    <tr>
      <td class="categorie">
        <%= link_to nettoyage_path do %>
          <div class="liste">
            <%= image_tag "categorie/nettoyage.jpeg", alt: "Pain complet" %>
            <p>Produits de nettoyage</p>
          </div>
        <% end %>
      </td>
      <td class="categorie">
        <%= link_to laitier_path do %>
          <div class="liste">
            <%= image_tag "categorie/laitier.avif", alt: "Pain complet", title: "CHIPS LEGERES(125G" %>
            <p>Produits laitiers</p>
          </div>
        <% end %>
      </td>
      <td class="categorie">
        <%= link_to boulangerie_path do %>
          <div class="liste">
            <%= image_tag "categorie/boulangerie.jpeg",  alt: "Pain complet" %>
            <p>Boulangerie et pâtisserie</p>
          </div>
        <% end %>
      </td>
      <td class="categorie">
        <%= link_to animaux_path do %>
          <div class="liste">
            <%= image_tag "categorie/nourriture-chiens.jpg",  alt: "Pain complet" %>
            <p>Animaux</p>
          </div>
        <% end %>
      </td>
      <td class="categorie">
        <%= link_to bio_path do %>
          <div class="liste">
              <%= image_tag "categorie/bio.jpeg",  alt: "Pain complet" %>
              <p>Bio et diététique</p>
          </div>
        <% end %>
      </td>
    </tr>
    <tr class="plus">
      <td>
      </td>
      <td>
      </td>
      <td>
        <%# <button class="promo-button">Voir plus</button> %>
      </td>
    </tr>
  </table>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
  const decreaseButtons = document.querySelectorAll(".decrease");
  const increaseButtons = document.querySelectorAll(".increase");
  const quantities = document.querySelectorAll(".quantity");
  const addToCartButtons = document.querySelectorAll(".add-to-cart");

  decreaseButtons.forEach((button, index) => {
    button.addEventListener("click", () => {
      let quantity = parseInt(quantities[index].value, 10);
      if (quantity > 0) {
        quantities[index].value = quantity - 1;
      }
    });
  });

  increaseButtons.forEach((button, index) => {
    button.addEventListener("click", () => {
      let quantity = parseInt(quantities[index].value, 10);
      quantities[index].value = quantity + 1;
    });
  });

  addToCartButtons.forEach((button) => {
    button.addEventListener("click", () => {
      button.classList.add("animate");
      setTimeout(() => {
        button.classList.remove("animate");
      }, 400);
    });
  });
});

  </script>

</body>
</html>
